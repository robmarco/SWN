<ul id="breadcrumbs">
	<li><%= link_to 'Dashboard', root_path, :title => "Dashboard" %></li>
	<li><%= link_to t('trials.breadcumbs.tests'), trials_path %></li>
	<li><%= link_to "Id #{@trial.id}", @trial %></li>
	<li><%= t('trials.breadcumbs.modify_test') %></li>
</ul>

<article class="full-block clearfix">
	<div class="article-container">
			
		<header>
			<h2><%= t('.header_modify_test') %> - <%= @trial.title %></h2>
			<nav>
				<ul class="button-switch">
					<li><%= link_to 'Eliminar', trial_path(@trial), :confirm => '¿Está seguro de que desea eliminar el test?', :method => :delete, :class => "button gray" %></li>
					<li><%= link_to 'Mostrar test', trial_path(@trial), :class => "button" %></li>
				</ul>
			</nav>
		</header>
		
		<section>
			<%= render 'form' %>
		</section>		
		
	</div>
</article>
<ul id="breadcrumbs">
  <li><%= link_to 'Dashboard', root_path, :title => "Dashboard" %></li>
  <li><%= link_to t('.breadcumbs.profile_configuration'), edit_account_path(current_user) %></li>
  <li><%= t('.breadcumbs.change_password') %></li>
</ul>

<article clas="full-block clearfix">
  <div class="article-container">
    <header><h2><%= t('.header') %></h2></header>

    <section>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        
        <%= devise_error_messages! %>
        <fieldset>
          <dl>
            <dt><%= f.label :password, t('.password') %></dt>
            <dd><%= f.password_field :password, :class => "medium" %></dd>
            
            <dt><%= f.label :password_confirmation, t('.password_confirmation') %></dt>
            <dd><%= f.password_field :password_confirmation, :class => "medium" %></dd>

            <dt><%= f.label :current_password, t('.current_password') %></dt>
            <dd><%= f.password_field :current_password, :class => "medium" %></dd>
          </dl>
        </fieldset>

        <div align="center">
          <%= f.submit "Guardar", :class => "button" %> รณ 
          <%= link_to "Cancelar", :back %>
      </div>
      <% end %>      

    </section>
  </div>
</article>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<% resource.build_account %>
	<%= devise_error_messages! %>
	<fieldset>
  	<legend>Datos de registro</legend>
		<dl>
			
			<%= f.fields_for :account do |user_account| %>
				<dt><%= user_account.label :name, "Nombre*", :rel => "tooltip", :title => "Campo requerido"  %></dt>
				<dd><%= user_account.text_field :name, :class => 'large' %></dd>
				
				<dt><%= user_account.label :secname, "Apellidos*", :rel => "tooltip", :title => "Campo requerido" %></dt>
				<dd><%= user_account.text_field :secname, :class => 'large' %></dd>
			<% end %>
			
			<dt><%= f.label :email, "Email*", :rel => "tooltip", :title => "Campo requerido" %></dt>
			<dd><%= f.email_field :email, :class => 'large' %></dd>
			
			<dt><%= f.label :password, "Password*", :rel => "tooltip", :title => "Campo requerido" %></dt>
			<dd>
				<%= f.password_field :password, :class => 'large' %>
				<p>Tiene que tener al menos 6 car√°cteres</p>
			</dd>
			
		</dl>
  </fieldset>
	<%= f.submit "Registrarse", :class => "button right" %>
<% end %>

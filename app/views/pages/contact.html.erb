		<%= form_tag '#' do %>
			<h4>Te responderemos lo antes posible</h4>
			<p><%= text_field_tag "name", "", :placeholder => "Nombre" %></p>
			<p><%= email_field_tag "email", "", :placeholder => "Email" %></p>
			<p><%= text_area_tag "message", nil, :rows => 8, :placeholder => "Tu mensaje" %></p>
			<p><%= submit_tag "Enviar" %></p>
		<% end %>
	</div>


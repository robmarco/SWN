<section>
	<div class="trainer_info">
		<div class="personal_info">
			<ul>
				<li><%= current_user.full_name %></li>
				<li><%= current_user.account.try(:club) %></li>
				<li><%= "#{current_user.account.try(:country)}, #{current_user.account.try(:city)}" %></li>
				<li><%= current_user.try(:email) %></li>
			</ul>
		</div>
		<div class="page_info">
			<h2>Informe de Test</h2>
			<p><%= Time.now.strftime("Generado %m/%d/%Y a %I:%M%p") %></p>
		</div>
	</div>
	<div class="clear"></div>

	<!-- Competition_Basic Information -->
	<div class="basic_information">
		<div class="left_80">
			<h2><%= @trial.title %></h2>
		</div>
		<div class="right_20">
			<h3><%= @trial.date_trial.strftime("%d/%m/%Y") %></h3>
			<p class="category"><%= @trial.trial_category.name %></p>
		</div>
	</div>

	<div class="clear"></div>

	<!-- Competition & Trial Results / With Best Results -->
	<div align="center">
		<% if @trial_results.count > 0 %>
			<table id="hor-minimalist-b">
				<thead>
					<tr>
						<tr><th colspan="5" id="colspan_title"><b>RESULTADOS DE TEST</b></th></tr>
						<th>Nadador</th>
						<th>Resultado</th>
						<th>Observaciones</th>
					</tr>
				</thead>
				<tbody>
					<% @trial_results.each do |result| %>
						<tr>
							<td><%= result.swimmer.swimmer_secname_name %></td>
							<td><%= "#{result.trial_value} #{@trial.trial_category.type_value}" %></td>
							<td><%= result.observation %></td>
						</tr>
					<% end %>
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4" class="text_right">Total de Resultados <%= @trial_results.size %></td>
					</tr>
				</tfoot>
			</table>
		<% end %>
	</div>
</section>


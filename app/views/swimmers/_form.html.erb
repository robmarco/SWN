<%= form_for(@swimmer) do |f| %>
  <% if @swimmer.errors.any? %>
    <div id="error_explanation">
			<a href="#" class="close-notification" title="Cerrar notificación" rel="tooltip">x</a>
      <h2><%= pluralize(@swimmer.errors.count, "error") %> prohibited this swimmer from being saved:</h2>

      <ul>
      <% @swimmer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<fieldset>
		<legend>Datos personales</legend>
		
		<dl>
			<dt><%= f.label :name, "Nombre" %></dt>
			<dd><%= f.text_field :name, :class => "medium" %></dd>
			<dt><%= f.label :secname, "Apellidos" %></dt>
			<dd><%= f.text_field :secname, :class => "medium" %></dd>
			<dt><%= f.label :licence, "Licencia" %></dt>
			<dd><%= f.text_field :licence, :class => "small" %></dd>
			<dt><%= f.label :born, "Fecha Nacimiento" %></dt>
			<dd><%= f.text_field :born, :class => "datepicker small" %></dd>
		</dl>
	
	</fieldset>
	
	<fieldset>
		<legend>Datos de contacto</legend>
		
		<dl>
			<dt><%= f.label :email, "Email" %></dt>
			<dd><%= f.text_field :email, :class => "medium" %></dd>
			<dt><%= f.label :address, "Dirección" %></dt>
			<dd><%= f.text_field :address, :class => "medium" %></dd>
			<dt><%= f.label :postal, "Código Postal" %></dt>
			<dd><%= f.text_field :postal, :class => "small" %></dd>
			<dt><%= f.label :city_id, "Ciudad" %></dt>
			<dd><%= f.text_field :city_id, :class => "small" %></dd>
			<dt><%= f.label :country_id, "País" %></dt>
			<dd><%= f.text_field :country_id, :class => "small" %></dd>
			<dt><%= f.label :phone, "Teléfono" %></dt>
			<dd><%= f.text_field :phone, :class => "small" %></dd>
		</dl>
	</fieldset>
	
	<fieldset>
		<legend>Datos de los padres</legend>
		
		<dl>
			<dt><%= f.label :parentname, "Nombre Padre/Madre" %></dt>
			<dd><%= f.text_field :parentname, :class => "medium" %></dd>
			<dt><%= f.label :parentemail, "Email Padre/Madre" %><br /></dt>
			<dd><%= f.text_field :parentemail, :class => "medium" %></dd>
			<dt><%= f.label :parentphone, "Teléfono Padre/Madre" %></dt>
			<dd><%= f.text_field :parentphone, :class => "small" %></dd>
		</dl>
	</fieldset>
	
	<fieldset>
		<legend>Otra información</legend>
		
		<dl>
			<dt><%= f.label :disease, "Enfermedades" %></dt>
			<dd><%= f.text_area :disease, :class => "wysiwyg medium" %></dd>
			<dt><%= f.label :observation, "Observaciones" %></dt>
			<dd><%= f.text_area :observation, :class => "wysiwyg medium" %></dd>
		</dl>
		
	</fieldset>
  <%= f.submit 'Enviar', :class => "button center" %> ó <%= link_to 'Cancelar', :back %>
  
<% end %>

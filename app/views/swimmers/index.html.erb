								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => "swimmer", :collection => @swimmers_fed %>
						</tbody>
					</table>
				</div>
				
				<div class="sidetab" id="sidetab3">
					<h3>No Federados</h3>
					<table class="datatable">
						<thead>
							<tr>
								<th>Apellidos</th>
								<th>Nombre</th>
								<th>Año</th>
								<th>Categoría</th>
								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => "swimmer", :collection => @swimmers_nofed %>
						</tbody>
					</table>
				</div>
			
				<div class="sidetab" id="sidetab4">
					<h3>Bajas</h3>
					<table class="datatable">
						<thead>
							<tr>
								<th>Apellidos</th>
								<th>Nombre</th>
								<th>Año</th>
								<th>Categoría</th>
								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => "swimmer", :collection => @swimmers_baja %>
						</tbody>
					</table>
				</div>
			</div>
			<!-- /Sidetabs - Gestión de nadadores-->
			
		</section>
		<!-- /Article content -->
				
	</div>
	<!-- /Article Container-->
		
</article>
<!-- /Full Content Block -->


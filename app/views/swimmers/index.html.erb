<ul id="breadcrumbs">
	<li><%= link_to 'Dashboard', root_path, :title => "Dashboard" %></li>
	<li><%= link_to 'Nadadores', swimmers_path %></li>
	<li>Ver lista de nadadores</li>
</ul>

<!-- Full Content Block -->
<article class="full-block clearfix">
	
	<!-- Article Container - Listado de nadadores -->
	<div class="article-container">
		
		<!-- Article header -->
		<header>
			<h2>Gestión de nadadores</h2>
			<nav>
				<ul class="button-switch">
					<li><%= link_to 'Añadir nadador', new_swimmer_path, :class => "button" %></li>
				</ul>
			</nav>
		</header>
		<!-- Article header-->
		
		<!-- Article content -->
		<section>
			
			<!-- Sidetabs - Gestión de nadadores -->
			<div class="sidetabs">
				
				<!-- Sidetabs Navigation -->
				<nav class="sidetab-switch">
					<ul>
						<li><a class="default-sidetab" href="#sidetab1">Todos</a></li>
						<li><a href="#sidetab2">Federados</a></li>
						<li><a href="#sidetab3">No Federados</a></li>
						<li><a href="#sidetab4">Bajas</a></li>
					</ul>
					<p>Se muestran los nadadores insertados en el sistema por un entrenador y su equipo técnico.</p>
				</nav>
				<!-- /Sidetabs Navigation -->
				
				<!-- Sidetab1 - Lista todos los nadadores-->
				<div class="sidetab default-sidetab" id="sidetab1">
					<h3>Todos</h3>
					<table class="datatable">
						<thead>
							<tr>
								<th>Apellidos</th>
								<th>Nombre</th>
								<th>Año</th>
								<th>Categoría</th>
								<th>Estado</th>
								<th>Acción</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => "swimmer", :collection => @swimmers %>
						</tbody>
					</table>
				</div>
				<!-- /Sidetab1 -->
				
				<div class="sidetab" id="sidetab2">
					<h3>Federados</h3>
					<table class="datatable">
						<thead>
							<tr>
								<th>Apellidos</th>
								<th>Nombre</th>
								<th>Año</th>

<ul id="breadcrumbs">
	<li><%= link_to 'Dashboard', root_path, :title => "Dashboard" %></li>
	<li><%= link_to 'Nadadores', swimmers_path %></li>
	<li>Id <%= @swimmer.id %></li>
</ul>

<!-- Information Block -->
<article class="full-block clearfix">
	<div class="article-container">
		
		<!-- Header  -->
		<header>
			<h2>
				Ver nadador - <%= "#{@swimmer.name} #{@swimmer.secname}" %>
			</h2>
			<nav>
				<ul class="button-switch">
					<li><%= link_to 'Añadir nadador', new_swimmer_path, :class => "button" %></li>
					<li><%= link_to 'Eliminar', swimmer_path(@swimmer), :confirm => '¿Está seguro de que desea eliminar al nadador?', :method => :delete, :class => "button gray" %></li>
					<li><%= link_to 'Editar', edit_swimmer_path(@swimmer), :class => "button" %></li>					
				</ul>
			</nav>				
		</header>
		<!-- \Header  -->

		<section>
			<div class="sidetabs">
				<nav class="sidetab-switch">
					<ul>
						<li><%= link_to 'Básico', "#sidetab1", :class => "default-sidetab" %></li>
						<li><%= link_to 'Contacto', "#sidetab2" %></li>
						<li><%= link_to 'Enfermedades', "#sidetab3" %></li>
					</ul>
				</nav>
				
				<div class="sidetab default-sidetab" id="sidetab1">
					<h3>Información personal del nadador</h3>
					<form>
						<fieldset>
							<legend>Datos personales</legend>

							<dl>
								<dt><%= label :name, "Nombre" %></dt>
								<dd class="text"><%= @swimmer.name %></dd>
								<dt><%= label :secname, "Apellidos" %></dt>
								<dd class="text"><%= @swimmer.secname %></dd>
								<dt><%= label :licence, "Licencia" %></dt>
								<dd class="text"><%= @swimmer.licence %></dd>
								<dt><%= label :born, "Año nacimiento" %></dt>
								<dd class="text"><%= @swimmer.born.strftime("%d/%m/%Y") %></dd>
								<dt><%= label :category, "Categoría" %></dt>
								<dd class="text"><%= @swimmer.category %></dd>
								<dt><%= label :state, "Estado" %></dt>
								<dd class="text"><%= @swimmer.state %></dd>
							</dl>
						</fieldset>

					</form>
					
				</div>
				
				<div class="sidetab" id="sidetab2">

					<h3>Información de contacto</h3>
					<form>
						<fieldset>
							<legend>Datos de contacto</legend>

							<dl>
								<dt><%= label :email, "Email" %></dt>
								<dd class="text"><%= @swimmer.email %> (<%= link_to 'Enviar email', '#' %>)</dd>
								<dt><%= label :address, "Dirección" %></dt>
								<dd class="text"><%= @swimmer.address %></dd>
								<dt><%= label :postal, "Código Postal" %></dt>
								<dd class="text"><%= @swimmer.postal %></dd>
								<dt><%= label :city, "Ciudad" %></dt>
								<dd class="text"><%= @swimmer.city %></dd>
								<dt><%= label :country, "País" %></dt>
								<dd class="text"><%= @swimmer.country %></dd>
								<dt><%= label :phone, "Teléfono" %></dt>
								<dd class="text"><%= @swimmer.phone %></dd>
							</dl>
						</fieldset>
						
						<fieldset>
							<dl>
								<dt><%= label :parentname, "Nombre Padre/Madre" %></dt>
								<dd class="text"><%= @swimmer.parentname %></dd>
								<dt><%= label :parentemail, "Email Padre/Madre" %></dt>
								<dd class="text">
									<%= @swimmer.parentemail %> (<%= link_to 'Enviar email', '#' %>)
								</dd>
								<dt><%= label :parentphone, "Teléfono Padre/Madre" %></dt>
								<dd class="text"><%= @swimmer.parentphone.nil? ? "-" : @swimmer.parentphone  %></dd>
							</dl>
						</fieldset>
					</form>
					
				</div>
				
				<div class="sidetab" id="sidetab3">
					<h3>Enfermedades y observaciones</h3>
					<form>
						<fieldset>
							<dl>
								<dt><%= label :disease, "Enfermedades" %></dt>
								<dd>
									<textarea rows="5" cols="40" class="wysiwyg large"><%= @swimmer.disease %></textarea>
								</dd>
								<dt><%= label :observation, "Observaciones" %></dt>
								<dd>
									<textarea rows="5" cols="40" class="wysiwyg large"><%= @swimmer.observation %></textarea>
								</dd>
							</dl>
						</fieldset>
					</form>
				</div>
				
			</div>		
			
		</section>
		
	</div>
</article>
<!-- \Information Block -->


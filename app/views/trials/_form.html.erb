<%= form_for(@trial) do |f| %>
  <% if @trial.errors.any? %>
    <div id="error_explanation">
			<a href="#" class="close-notification" title="Cerrar notificación" rel="tooltip">x</a>
      <h2><%= pluralize(@trial.errors.count, "error") %> prohibited this trial from being saved:</h2>

      <ul>
      <% @trial.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<fieldset>
		<legend>Datos del test</legend>
		
		<dl>
			<dt><%= f.label :title, "Título*", :rel => "tooltip", :title => "Campo requerido" %></dt>
			<dd><%= f.text_field :title, :class => "medium" %></dd>
			
			<dt><%= f.label :date_trial, "Fecha*", :rel => "tooltip", :title => "Campo requerido" %></dt>
			<dd>
				<% if params[:action]=="edit" %>
					<%= f.text_field :date_trial, :value => @trial.date_trial.strftime("%d/%m/%Y"), :class => "datepicker" %>
				<% else %>
					<%= f.text_field :date_trial, :class => "datepicker" %>
				<% end %>
			</dd>
			
			<dt><%= f.label :trial_category_id, "Categoría*", :rel => "tooltip", :title => "Campo requerido" %></dt>
			<dd>
				<% if params[:action] == "edit" %>
					<%= f.select :trial_category_id, options_from_collection_for_select(@trial_categories, "id", "name"), :class => "small"%>
				<% else %>
					<%= f.select :trial_category_id, options_from_collection_for_select(@trial_categories, "id", "name"), :include_blank => true, :class => "small"%>
				<% end %>				
			</dd>
		</dl>
	</fieldset>
	
	<!-- Trial_Results Block -->
	<fieldset>
		<legend>Resultados de Test</legend>
		<table>
			<thead>
				<tr>
					<th></th>
					<th>Nadador</th>
					<th>Tipo de Test</th>
					<th>Valor</th>
					<th>Unidad</th>
					<th>Observaciones</th>
				</tr>
			</thead>
			
			<tbody>
				<%= f.fields_for :trial_results do |builder| %>
					<%= render 'trial_result_fields', :f => builder %>
				<% end %>				
			</tbody>
			
			<tfoot>
				<tr>
					<td colspan="6"><p class="res"><%= link_to_add_fields "Añadir resultado", f, :trial_results %></p></td>
				</tr>
			</tfoot>
		</table>
		<br />
	</fieldset>
	<!-- \Trial_Results Block -->
	
	<div align="center"><%= f.submit 'Enviar', :class => "button" %> ó <%= link_to 'Cancelar', :back %></div>
	
<% end %>

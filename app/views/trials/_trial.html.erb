<tr>
	<td><%= trial.date_trial.strftime("%d/%m/%Y") %></td>
  <td><b><%= trial.title %></b></td>
  <td><span class="tag tag2 <%= trial.trial_category.color %>"><%= trial.trial_category.name %></span></td>
	<td>
		<ul class="actions">
			<li><%= link_to 'ver', trial_path(trial), :class => "view", :title => "Ver test", :rel => "tooltip" %></li>
			<li><%= link_to 'editar', edit_trial_path(trial), :class => "edit", :title => "Editar test", :rel => "tooltip" %></li>
			<li><%= link_to 'eliminar', trial_path(trial), :confirm => '¿Está seguro de que desea eliminar el test?', :method => :delete, :class => "delete", :title => "Eliminar test", :rel => "tooltip" %></li>
		</ul>
	</td>
</tr>